<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo_prueba"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLogin"
    tools:context=".UI.AuthActivity">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/login_facebook"
        android:text="@string/facebook_title_text"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton"
        android:layout_marginRight="@dimen/margen_corto"
        android:layout_marginLeft="@dimen/margen_corto"
        android:drawableLeft="@drawable/facebook"
        android:paddingLeft="@dimen/margen_extra_corto"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <Button
        android:id="@+id/login_google"
        android:text="@string/google_title_text"
        android:textColor="@android:color/white"
        android:layout_marginRight="@dimen/margen_corto"
        android:layout_marginLeft="@dimen/margen_corto"
        android:drawableLeft="@drawable/google"
        android:paddingLeft="@dimen/margen_extra_corto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_g"
        android:layout_marginTop="@dimen/margen_corto"
        app:layout_constraintTop_toBottomOf="@+id/login_facebook"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0." />

</android.support.constraint.ConstraintLayout>