<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLogin"
    tools:context=".UI.AuthActivity">

    <ImageView
        android:src="@drawable/fondo"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:background="#080331"
        android:alpha="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="@dimen/margen_extra_corto"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"/>


    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo">


        <Button
            android:id="@+id/login_facebook"
            android:text="@string/facebook_title_text"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/boton"
            android:layout_marginRight="@dimen/margen_corto"
            android:layout_marginLeft="@dimen/margen_corto"
            android:drawableLeft="@drawable/facebook"
            android:paddingLeft="@dimen/margen_corto" />

        <Button
            android:id="@+id/login_google"
            android:text="@string/google_title_text"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/margen_corto"
            android:layout_marginLeft="@dimen/margen_corto"
            android:drawableLeft="@drawable/google"
            android:paddingLeft="@dimen/margen_corto"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/boton_g"
            android:layout_marginTop="15dp"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">


            <View
                android:background="@color/hintText"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margen_extra_corto"
                android:layout_width="80dp"
                android:layout_height="1dp"/>


            <TextView
                android:text="@string/OR"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:background="@color/hintText"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margen_extra_corto"
                android:layout_width="80dp"
                android:layout_height="1dp"/>


        </LinearLayout>



        <Button
            android:id="@+id/login_email"
            android:text="@string/mail_title_text"
            android:textColor="@android:color/background_dark"
            android:layout_marginRight="@dimen/margen_corto"
            android:layout_marginLeft="@dimen/margen_corto"
            android:drawableLeft="@drawable/mail"
            android:paddingLeft="@dimen/margen_corto"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/boton_w"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <CheckBox
                android:checked="true"
                android:text="@string/accept_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mini_text"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtPrivacyPolicy"
                android:textColor="@android:color/white"
                android:textSize="@dimen/mini_text"
                android:clickable="true"
                android:layout_centerInParent="true"
                android:linksClickable="true"/>
        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margen_corto"
        android:layout_marginRight="@dimen/margen_corto"
        android:layout_marginTop="@dimen/margen_largo"
        app:layout_constraintTop_toBottomOf="@+id/logo">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hintText">

            <AutoCompleteTextView
                android:id="@+id/email"
                android:drawableLeft="@drawable/ic_mail"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/margen_extra_corto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_email"
                android:textColorHint="@color/hintText"
                android:textColor="@android:color/white"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingTop="@dimen/margen_extra_corto"
                android:paddingBottom="@dimen/margen_extra_corto"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:background="@color/hintText"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hintText"
                app:passwordToggleTint="@color/hintText"
                app:passwordToggleEnabled = "true"
                app:passwordToggleDrawable="@drawable/icon_selector">

                <EditText
                    android:id="@+id/password"
                    android:paddingLeft="@dimen/margen_largo"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_password"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/action_toggle"
                android:src="@drawable/ic_pass"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:background="@android:color/transparent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:background="@color/hintText"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <Button
            android:id="@+id/sign_in_button"
            android:text="sign in"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/margen_corto"
            android:layout_marginLeft="@dimen/margen_corto"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/boton_q"
            android:layout_marginTop="@dimen/margen_corto" />


    </LinearLayout>




    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"/>





    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

</android.support.constraint.ConstraintLayout>